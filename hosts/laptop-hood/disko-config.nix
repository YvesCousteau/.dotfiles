{
  config,
  lib,
  pkgs,
  ...
}:
{
  disko.devices = {
    disk = {
      main = {
        device = "/dev/nvme0n1"; # Adjust this to match your actual device
        type = "disk";
        content = {
          type = "gpt";
          partitions = {
            boot = {
              size = "512M";
              type = "EF00";
              content = {
                type = "filesystem";
                format = "vfat";
                mountpoint = "/boot/efi";
              };
            };
            root = {
              size = "100%";
              content = {
                type = "filesystem";
                format = "ext4";
                mountpoint = "/";
              };
            };
          };
        };
      };
    };
  };
}
